#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/ext_power.h>

#define COLEMAKm 0
#define QWERTYm  1
#define FUNCm    2
#define COLEMAKw 3
#define QWERTYw  4
#define FUNCw    5


/ {
    behaviors {
        mmbvG: MMBVG {
            compatible = "zmk,behavior-mod-morph";
            label = "MOD_MORPH_BVG";
            #binding-cells = <0>;
            bindings = <&kp B>, <&kp RG(V)>;
            mods = <(MOD_LGUI)>;
        };

        mmbvC: MMBVC {
            compatible = "zmk,behavior-mod-morph";
            label = "MOD_MORPH_BVC";
            #binding-cells = <0>;
            bindings = <&kp B>, <&kp RC(V)>;
            mods = <(MOD_LCTL)>;
        };
    };

    macros {
        sLangM: sLangM {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp RCTRL>
                , <&macro_wait_time 50>
                , <&macro_tap &kp SPACE>
                , <&macro_wait_time 50>
                , <&macro_release &kp RCTRL>
                ;
        };

        LANGm: LANGm {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp RCTRL>
                , <&macro_tap &tog QWERTYm>
                , <&macro_wait_time 50>
                , <&macro_tap &kp SPACE>
                , <&macro_wait_time 50>
                , <&macro_release &kp RCTRL>
                ;
        };

        LANGw: LANGw {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&kp GRAVE>
                , <&tog QWERTYw>
                ;
        };

        To_Win: To_Win {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&bt BT_SEL 2>
                , <&to COLEMAKw>
                ;
        };

        To_OSX: To_OSX {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&bt BT_SEL 0>
                , <&to COLEMAKm>
                ;
        };
    };

    keymap {
        compatible = "zmk,keymap";
                                
        colemakm {
            display-name = "OSX";
            bindings = <
&kp ESC     &kp N1 &kp N2 &kp N3   &kp N4   &kp N5                                      &kp N6 &kp N7   &kp N8    &kp N9  &kp N0     &kp BSLH
&kp GRAVE   &kp Q  &kp W  &kp F    &kp P    &kp B                                       &kp J  &kp L    &kp U     &kp Y   &kp MINUS  &kp EQUAL
&kp TAB     &kp A  &kp R  &kp S    &kp T    &kp G                                       &kp M  &kp N    &kp E     &kp I   &kp O      &kp SEMI
&kp LSHFT   &kp Z  &kp X  &kp C    &kp D    &kp V           &kp LBKT    &LANGm          &kp K  &kp H    &kp COMMA &kp DOT &kp FSLH   &kp APOS
            &kp LCTRL   &kp LALT    &kp LGUI    &lt FUNCm ENTER       &lt FUNCm SPACE       &kp BSPC    &kp LEFT    &kp RIGHT
            >;
        };

        qwertym {
            display-name = "Qwerty";
            bindings = <
&kp ESC     &kp N2      &kp N3      &kp N4     &kp N5       &kp N6                              &kp N7      &kp N8      &kp N9      &kp N0      &kp MINUS       &kp EQUAL
&kp Q       &kp W       &kp E       &kp R      &kp T        &kp Y                               &kp U       &kp I       &kp O       &kp P       &kp LBKT        &kp RBKT
&kp TAB     &kp A       &kp S       &kp D      &kp F        &kp G                               &kp H       &kp J       &kp K       &kp L       &kp SEMI        &kp APOS
&kp LSHFT   &kp Z       &kp X       &kp C      &kp V        &mmbvG   &tog QWERTYm   &LANGm      &kp N       &kp M       &kp COMMA   &kp DOT     &kp FSLH        &kp ESC
                                    &trans    &trans  &trans         &trans         &trans              &trans    &trans    &trans
            >;
        };

        funcm {
            display-name = "OSX fn";
            bindings = <
&kp KP_N0   &kp KP_N1    &kp KP_N2  &kp KP_N3   &kp F4      &kp F5                                          &kp F6      &kp F7      &kp F8      &kp F9      &kp F10     &To_Win
&bt BT_CLR  &kp KP_N4    &kp KP_N5  &kp KP_N6   &bt BT_SEL 0 &bt BT_SEL 1                                   &none       &kp RG(LEFT) &kp UP     &kp RG(RIGHT) &none     &trans
&kp RS(TAB) &kp KP_N7    &kp KP_N8  &kp KP_N9   &none       &bt BT_SEL 2                                    &none       &kp LEFT    &kp DOWN    &kp RIGHT   &none       &trans
&none       &kp RG(Z) &kp RG(X)  &kp RG(C)   &kp RG(V)   &kp RG(V)       &tog QWERTYm    &kp RBKT        &none       &none       &none       &none       &none       &kp RG(RS(N4))
                                            &kp CAPS  &trans  &trans        &trans          &trans      &kp DEL      &kp RG(LEFT)    &kp RG(RIGHT)
            >;
        };

// ------------------------------------------------------------------------------------------------------------
// ------------------------------------------------------------------------------------------------------------
// ------------------------------------------------------------------------------------------------------------

        colemakw {
            display-name = "Windows";
            bindings = <
&kp ESC     &kp N1 &kp N2 &kp N3   &kp N4   &kp N5                                          &kp N6 &kp N7   &kp N8    &kp N9  &kp N0     &kp BSLH
&kp GRAVE   &kp Q  &kp W  &kp F    &kp P    &kp B                                           &kp J  &kp L    &kp U     &kp Y   &kp MINUS  &kp EQUAL
&kp TAB     &kp A  &kp R  &kp S    &kp T    &kp G                                           &kp M  &kp N    &kp E     &kp I   &kp O      &kp SEMI
&kp LSHFT   &kp Z  &kp X  &kp C    &kp D    &kp V       &kp LBKT            &LANGw          &kp K  &kp H    &kp COMMA &kp DOT &kp FSLH   &kp APOS
            &kp LGUI   &kp LALT    &kp LCTRL            &lt FUNCw ENTER     &lt FUNCw SPACE &kp BSPC    &kp LEFT    &kp RIGHT
            >;
        };

        qwertyw {
            display-name = "Qwerty";
            bindings = <
&kp ESC     &kp N2      &kp N3      &kp N4     &kp N5       &kp N6                              &kp N7      &kp N8      &kp N9      &kp N0      &kp MINUS       &kp EQUAL
&kp Q       &kp W       &kp E       &kp R      &kp T        &kp Y                               &kp U       &kp I       &kp O       &kp P       &kp LBKT        &kp RBKT
&kp TAB     &kp A       &kp S       &kp D      &kp F        &kp G                               &kp H       &kp J       &kp K       &kp L       &kp SEMI        &kp APOS
&kp LSHFT   &kp Z       &kp X       &kp C      &kp V        &mmbvC    &kp GRAVE    &tog QWERTYw &kp N       &kp M       &kp COMMA   &kp DOT     &kp FSLH        &kp GRAVE
                                &trans    &trans  &trans              &trans       &trans       &trans    &trans    &trans
            >;
        };

        funcw {
            display-name = "Windows fn";
            bindings = <
&kp N0      &kp N1      &kp N2      &kp N3      &kp F4      &kp F5                                          &kp F6      &kp F7      &kp F8      &kp F9      &kp F10     &To_OSX
&bt BT_CLR  &kp N4      &kp N5      &kp N6      &bt BT_SEL 0 &bt BT_SEL 1                                   &none       &kp RG(LEFT) &kp UP     &kp RG(RIGHT) &none     &trans
&kp RS(TAB) &kp N7      &kp N8      &kp N9      &none       &bt BT_SEL 2                                    &none       &kp LEFT    &kp DOWN    &kp RIGHT   &none       &trans
&none       &kp RG(Z) &kp RG(X)   &kp RG(C)   &kp RG(V)   &kp RG(V)       &kp GRAVE       &kp LBKT        &none       &none       &none       &none       &none       &kp RG(RS(S))
                                            &kp CAPS  &trans  &trans        &trans          &trans          &kp DEL      &kp RG(LEFT)    &kp RG(RIGHT)
            >;
        };
    };
};
